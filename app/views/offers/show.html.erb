<div class="container">
    <h1><%= @offer.title %></h1>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%= cl_image_path @offer.photos[0].key %>" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= cl_image_path @offer.photos[1].key %>" alt="Second slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">

    <% if @offer.photos[1] %>
      <div class="carousel-item active">
        <%= cl_image_tag @offer.photos[0].key, alt: "First slide", class: "d-flex justify-content-center", height: 550  %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag @offer.photos[1].key, alt: "Second slide", class: "d-flex justify-content-center", height: 550   %>
      </div>
    <% end %>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container-show-reservations">

    <div class="container container-reservation-content">
      <%# <div class="botton-show">
        <%= link_to "Back to My Reservations", my_reservations_path, class: "btn btn-primary" %>
      <%# </div> %>

      <div class="my-reservation-details">
        <h2><%= @offer.title %></h2>
        <p> <small><%= @offer.location %> </small></p>
        <hr><br>
        <p> Hosted by: <%= @offer.user.full_name %> </p>
        <p><em>Un poco mas sobre el lugar:</em></p>
        <p> <%= @offer.description %> </p>
      </div>

      <div class="botton-show cancellation-show">
        <%= link_to "Edit offer", edit_offer_path, class: "btn btn-primary" %>
        <%= link_to "Delete", offer_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
      </div>

    </div>

    <div class="container">
      <div class="row">
        <div class="col-10 m-auto">
          <div class="flat-form form-container">
              <h3> $ <%= @offer.price_per_night %> <small>per night</small></h3>
              <div class="mt-3">
                <%= simple_form_for [@offer, @reservation] do |r| %>
                  <%= r.input :date_checkin, as: :date %>
                  <%= r.input :date_checkout, as: :date %>
                  <%= r.input :guests %>
                  <%= r.button :submit, class: "btn btn-primary" %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>

</div>
